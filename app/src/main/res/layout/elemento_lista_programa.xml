<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/fondo_elemento_lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/azul_cielo"
        android:orientation="vertical"
        android:elevation="2dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"

        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        >
        <TextView
            android:id="@+id/text_titulo_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/texto_elemento_programa"
            android:text="example"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/relog_ico"/>
            <TextView
                android:id="@+id/text_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/texto_hora_programa"
                android:text="example"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/punto_mapa_ico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/punto_mapa_ico"/>
            <TextView
                android:id="@+id/punto_mapa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/texto_hora_programa"
                android:text="example"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/chair_ico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/person_ico"/>
            <TextView
                android:id="@+id/chair_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/texto_hora_programa"
                android:text="example"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>